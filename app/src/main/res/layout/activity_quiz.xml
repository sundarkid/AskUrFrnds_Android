<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trydevs.askyourfriends.askurfrnds.activity.QuizActivity">

    <include
        android:id="@+id/top_bar_quiz_activity"
        layout="@layout/top_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_question_list_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/send_quiz_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/_8dp"
            android:layout_marginRight="@dimen/_8dp"
            android:src="@drawable/ic_tick_1"
            app:fab_colorNormal="@color/grey_background"
            app:fab_colorPressed="@color/primary_light"
            app:fab_colorRipple="@color/accent" />
    </FrameLayout>

</LinearLayout>
