<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="2dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/card_question_question"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_question"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:paddingBottom="@dimen/option_bottom" />

        <RadioGroup
            android:id="@+id/card_question_radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/card_question_radio_0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/option_text"
                android:paddingTop="@dimen/option_top"
                android:paddingBottom="@dimen/option_bottom" />

            <RadioButton
                android:id="@+id/card_question_radio_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/option_text"
                android:paddingTop="@dimen/option_top"
                android:paddingBottom="@dimen/option_bottom" />

            <RadioButton
                android:id="@+id/card_question_radio_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/option_text"
                android:paddingTop="@dimen/option_top"
                android:paddingBottom="@dimen/option_bottom" />

            <RadioButton
                android:id="@+id/card_question_radio_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/option_text"
                android:paddingTop="@dimen/option_top"
                android:paddingBottom="@dimen/option_bottom" />

        </RadioGroup>

    </LinearLayout>

</android.support.v7.widget.CardView>