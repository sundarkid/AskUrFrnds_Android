<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_quiz_list"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_list_item"
    android:background="@drawable/custom_bg"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_quiz_list"
        android:layout_width="@dimen/standard_list_item"
        android:layout_height="match_parent"
        android:padding="@dimen/_8dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name_quiz_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:lines="1"
            android:padding="@dimen/_8dp"
            android:text="@string/sample_question"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/text_date_quiz_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/_16dp"
            android:paddingRight="@dimen/_16dp"
            android:text="date"
            android:textAppearance="?android:attr/textAppearance" />
    </LinearLayout>

</LinearLayout>